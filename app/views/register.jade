extends layout

block content
  .container
    form(class='form-auth form-register', action='register')
      h2(class='form-auth form-register-heading') Registration
      label(for='username', class='sr-only') Username
      input(type='text', id='username', class='form-control', placeholder='Username', required, autofocus)
      label(for='password', class='sr-only') Password
      input(type='password', id='password', class='form-control', placeholder='Password', required)
      label(for='checkPassword', class='sr-only') Password
      input(type='password', id='checkPassword', class='form-control last-input', placeholder='Password Verification', required)

      button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in

block style
  link(rel="stylesheet", href="/css/auth.css")